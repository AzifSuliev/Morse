@page
@model IndexModel
<form method="post" id="translateForm" novalidate>
    <h2>Abc --> Morse</h2>
    <div class="row">
        <div class="row col-6 px-4">
            <label for="textAreaInput">Введите текст:</label>
            <textarea id="textAreaInput" style="font-size:28px; white-space: nowrap;" name="InputText" rows="5" cols="50" placeholder="Введите ваш текст здесь..." onkeydown="handleKeyPress(event);">@Model.InputText</textarea>
            <input id="translate-button" type="submit" value="Перевести">
        </div>
        <div class="row col-6 px-4">
            <label for="textAreaOutput">Результат:</label>
            <textarea id="textAreaOutput" name="OutputText" readonly style="font-size:28px; rows="5" cols="50">@Model.OutputText</textarea>
        </div>
    </div>
</form>

<script>
    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            event.preventDefault();
            document.getElementById('translateForm').submit();
            return false;
        }
    }
</script>
